#day2_7
data<-read.csv("water_potability.csv")
data
u=data$ph
x=data$Hardness
relation<-lm(u~x)	
print(relation)
w=data.frame(v=88)
res=predict(relation,w)
print(res)
plot(u,x,
     col = "blue",
     main = "ph and hardness Regression",
     abline(lm(x~u)),
     cex = 0.1,
     pch = 16,
     xlab = "ph rate",
     ylab = "HardnessÃ‚ level")



